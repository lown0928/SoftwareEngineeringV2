    <script type="text/javascript">
        var picPaths = ['/Images/Bahamas_banner.jpg', '/Images/Frankfurt_banner.jpg', '/Images/Rio-banner.jpg', '/Images/India_banner.jpeg', '/Images/washington-dc-skyline.jpg'];
            var curPic = -1;
            //preload the images for smooth animation
            var imgO = new Array();
            for(i=0; i < picPaths.length; i++) {
                imgO[i] = new Image();
                imgO[i].src = picPaths[i];
            }

            function swapImage() {
                curPic = (++curPic > picPaths.length-1)? 0 : curPic;
                imgCont.src = imgO[curPic].src;
                setTimeout(swapImage,4000);
            }

            window.onload=function() {
                imgCont = document.getElementById('banner');
                swapImage();
            }
    </script>

</head>
